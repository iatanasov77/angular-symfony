{% extends "IAApplicationBundle::layout.html.twig" %}
{% block title %}{{ parent() }} :: List Fieldsets{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> List Fieldsets{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <section class="panel">
            <table class="table table-striped table-advance table-hover">
                <tr>
                    <th width="50">N</th>
                    <th>Title</th>
                    <th width="150">Action</th>
                </tr>
                {% for item in items %}
                    <tr>
                        <td>
                            <input type="checkbox" name="active[{{ item.getId() }}]" />
                            {{ item.getId() }}
                        </td>
                        <td>
                            <a href="{{ path('ia_web_content_thief_edit_project', {'id': item.getId()}) }}">
                                {{ item.getTitle() }}
                            </a>
                        </td>
                        
                        <td>
                            {#<a id="btnDelete" href="{{ path('ia_web_content_thief_delete_project', {'id': item.getId()}) }}">Delete</a>#}
                            <div class="btn-group">
                                <a class="btn btn-primary" href="#">
                                    <i class="icon_plus_alt2"></i>
                                </a>
                                <a class="btn btn-success" href="#">
                                    <i class="icon_check_alt2"></i>
                                </a>
                                <a class="btn btn-danger btnDelete" href="{{ path('ia_web_content_thief_delete_project', {'id': item.getId()}) }}">
                                    <i class="icon_close_alt2"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </section>
    </div>
{% endblock %}

{% block endDocumentScripts %}
    {{ parent() }}
    <script type="text/javascript">
        jQuery("#btnDelete").on("click", function(e) {
            var link = this;
            e.preventDefault();

            jQuery("<div>Do you want to delete this Item?</div>").dialog({
                buttons: {
                    "Ok": function() {
                        window.location = link.href;
                    },
                    "Cancel": function() {
                        jQuery(this).dialog("close");
                    }
                }
            });
        });
    </script>
{% endblock %}
{% extends "IAApplicationBundle::layout.html.twig" %}

{% block head_styles %}
    {{ parent() }}
    {% stylesheets filter='uglifycss, cssrewrite' output="assets/build/wct.css"
        'bundles/iawebcontentthief/css/styles.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block title %}{{ parent() }} :: Edit Project{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Edit Project{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                <a class="btn btn-primary btnRunProject" data-projectId="{{ item.getId() }}" 
                        href="{{ path('ia_web_content_thief_parser_run', {'projectId': item.getId()}) }}">
                    Run Project
                </a>
                <a class="btn  btn-warning btnPreviewProject" data-projectId="{{ item.getId() }}" href="javascript:;">
                    Preview Project
                </a>
                <a class="btn  btn-danger btnCopyProject" data-projectId="{{ item.getId() }}" href="javascript:;">
                    Copy Project
                </a>
            </div>
        </section>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
            <section class="panel">
                <header class="panel-heading"> Edit Project </header>
                <div class="panel-body">
                    <div class="form-group">    
                        {{ form_label(form.active, null, {
                            'label_attr': {'class': 'control-label col-lg-1'}
                            }) 
                        }}
                        <div class="col-lg-10">
                            <div class="checkbox">
                                {{ form_widget(form.active) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.title, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-10">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                        
                        
                    <div class="form-group">
                        {{ form_label(form.parseCountMax, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-2">
                            {{ form_widget(form.parseCountMax, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.url, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-10">
                            {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
                            
                        </div>
                        
                        
                        {% set url=item.getUrl() %}
                        {% if(url is empty) %}
                            {% set url='#' %}
                        {% endif %}
                        <input class="btn btnBrowse" type="button" value="Browse" data-urlInput="#FormProject_url" data-browserUrl="{{ url('ia_web_content_thief_browse') }}" />
                      
                        <div class="col-sm-1">&nbsp;</div>
                        
                        <div class="col-sm-12" style="margin: 20px 0 20px 0;">
                            <iframe id="remoteBrowser" style="display:block; width:100%; height:500px;" data-browserCss="{{ asset('css/browser.css') }}"></iframe>
                        </div>
                            
                        {{ form_label(form.xquery, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-6">
                            {{ form_widget(form.xquery, {'attr': {'class': 'form-control'}}) }}

                        </div>
                        {{ form_label(form.xqueryField, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-2">
                            {{ form_widget(form.xqueryField, {'attr': {'class': 'form-control xquery-field-select'}}) }}

                        </div> 
                        <div class="col-sm-1">
                            <input class="btn" id="btnSetXquery" type="button" value="Set Xquery" />
                        </div>
                            
                        
                    </div>
       
                    {% if(item.getId()) %}
                    <div class="form-group">
                        {{ form_label(form.detailsPage, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-8">
                            {{ form_widget(form.detailsPage, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <input class="btn btnBrowse" type="button" value="Browse" data-urlInput="#FormProject_detailsPage" data-browserUrl="{{ url('ia_web_content_thief_browse') }}" />
                    </div>
                    {% endif %}
                        
                    <div class="form-group">
                        {{ form_label(form.detailsLink, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-10">
                            {{ form_widget(form.detailsLink, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                        
                    <div class="form-group">
                        {{ form_label(form.pagerLink, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-10">
                            {{ form_widget(form.pagerLink, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                            
                    <fieldset>
                        <legend> Listing Page Fields</legend>
                        <div class="form-group">
                            {{ form_label(form.fieldset, null, {
                                'label_attr': {'class': 'col-sm-1 control-label'}
                                }) 
                            }}
                            <div class="col-sm-4">
                                {{ form_widget(form.fieldset, {'attr': {'class': 'form-control'}}) }}

                            </div>
                            <div class="col-sm-1">
                                <input class="btn" id="btnAddFields" type="button" value="Add Fields" data-projectId="{{ item.getId() }}" data-addFieldsUrl="{{ path('ia_web_content_projects_add_fields') }}" />
                            </div>
                        </div>
                        <div class="fieldsContainer" data-prototype="{% filter escape %}{% include 'IAWebContentThiefBundle:Projects:add-field-prototype.html.twig' with {'form': form.listingFields.vars.prototype} %}{% endfilter %}">
                        {% for field in form.listingFields %}
                            {% include 'IAWebContentThiefBundle:Projects:add-field-prototype.html.twig' with {'form': field} %}
                        {% endfor %}
                        </div>
                    </fieldset>
                            
                            
                    <fieldset>
                        <legend> Details Page Fields</legend>
                        <div class="form-group">
                            {{ form_label(form.fieldset, null, {
                                'label_attr': {'class': 'col-sm-1 control-label'}
                                }) 
                            }}
                            <div class="col-sm-4">
                                {{ form_widget(form.fieldset, {'attr': {'class': 'form-control'}}) }}

                            </div>
                            <div class="col-sm-1">
                                <input class="btn" id="btnAddFields" type="button" value="Add Fields" data-projectId="{{ item.getId() }}" data-addFieldsUrl="{{ path('ia_web_content_projects_add_fields') }}" />
                            </div>
                        </div>
                        <div class="fieldsContainer" data-prototype="{% filter escape %}{% include 'IAWebContentThiefBundle:Projects:add-field-prototype.html.twig' with {'form': form.detailsFields.vars.prototype} %}{% endfilter %}">
                        {% for field in form.detailsFields %}
                            {% include 'IAWebContentThiefBundle:Projects:add-field-prototype.html.twig' with {'form': field} %}
                        {% endfor %}
                        </div>
                        
                    </fieldset> 
                </div>
            </section>
                    
            {{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-primary', 'id':'btnSave'}}) }}
            {{ form_widget(form.btnCancel, {'attr': {'class': 'btn btn-default', 'id':'btnCancel'}}) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}

{% block endDocumentScripts %}
    {{ parent() }}
    
    {% javascripts filter="?uglifyjs2" output="assets/build/webcontentthief.js" 
        '@IAWebContentThiefBundle/Resources/public/vendor/jquery-duplicate-fields/jquery.duplicateFields.js'
        '@IAWebContentThiefBundle/Resources/public/js/projects-edit.js' 
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

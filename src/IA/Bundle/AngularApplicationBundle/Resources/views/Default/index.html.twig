{% extends "::base.html.twig" %}
{% set assetsPath = "/bundles/iaangularapplication" %}

{% block title %} :: Angular Application{% endblock %}

{% block stylesheets %}
	{{ parent() }}

    <link href="{{ asset(assetsPath~'/css/custom.css') }}" rel="stylesheet" />
{% endblock %}


{% block scripts %}
    {{ parent() }}
    <script type="text/javascript">
        var ENV = {
            assetsPath: '{{ assetsPath }}'
        }
    </script>
    {#
    {% javascripts injector='vendor, application' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    
    <script type="text/javascript" src="{{assetsPath}}/vendor/require.js" data-main="{{ assetsPath }}/application/main.js"></script>
    #}
    
    {{ require_js_initialize({ 'main' : asset(assetsPath~'/application/main.js') }) }}
    
{% endblock %}

{% block content %}
	<div id="IAAngularApplication">
    	<div data-ng-view class="example-animate-container" data-ng-animate="{enter: 'example-enter', leave: 'example-leave'}"></div>
    </div>
{% endblock %}
